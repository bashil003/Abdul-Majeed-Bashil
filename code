#include <ESP8266WiFi.h>
#include <Firebase_ESP_Client.h>
#include <time.h>

// -------- WiFi --------
#define WIFI_SSID     "Abhu"
#define WIFI_PASSWORD "00000000"

// -------- Firebase --------
#define API_KEY "AIzaSyBuzYUqHUIbe0qeEUhofG_jM1EGfSqZN7Y"
#define DATABASE_URL "home-automation-40fa3-default-rtdb.asia-southeast1.firebasedatabase.app"

// -------- Pins --------
#define BULB1_PIN  D2
#define BULB2_PIN  D5
#define ALARM_PIN  D3

FirebaseData fbdo;
FirebaseAuth auth;
FirebaseConfig config;

void setup() {

  Serial.begin(115200);
  delay(1000);
  Serial.println("\nSystem Starting...");

  pinMode(BULB1_PIN, OUTPUT);
  pinMode(BULB2_PIN, OUTPUT);
  pinMode(ALARM_PIN, OUTPUT);

  digitalWrite(BULB1_PIN, LOW);
  digitalWrite(BULB2_PIN, LOW);
  digitalWrite(ALARM_PIN, LOW);

  // -------- WiFi --------
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nWiFi Connected");
  Serial.print("IP Address: ");
  Serial.println(WiFi.localIP());

  // -------- Time Sync --------
  configTime(0, 0, "pool.ntp.org", "time.nist.gov");
  Serial.print("Syncing time");
  time_t now = time(nullptr);
  while (now < 8 * 3600 * 2) {
    delay(500);
    Serial.print(".");
    now = time(nullptr);
  }
  Serial.println("\nTime Synced!");

  // -------- Firebase Setup --------
  config.api_key = API_KEY;
  config.database_url = DATABASE_URL;
  config.timeout.serverResponse = 10000;

  config.signer.tokens.legacy_token = "IQ7TmjDfG7958PJtGtLE6PrGhKkkvh63SIIrTy6L";

  Firebase.begin(&config, &auth);
  Firebase.reconnectWiFi(true);

  delay(2000);

  if (Firebase.ready())
    Serial.println("Firebase Connected!");
  else
    Serial.println("Firebase NOT Ready!");
}

void loop() {

  if (Firebase.ready()) {

    // -------- Bulb 1 --------
    if (Firebase.RTDB.getInt(&fbdo, "/bulbState")) {
      int bulb1Val = fbdo.intData();
      digitalWrite(BULB1_PIN, bulb1Val ? HIGH : LOW);
      Serial.print("Bulb1: ");
      Serial.println(bulb1Val);
    } else {
      Serial.print("Bulb1 error: ");
      Serial.println(fbdo.errorReason());
    }

    // -------- Bulb 2 --------
    if (Firebase.RTDB.getInt(&fbdo, "/bulb2State")) {
      int bulb2Val = fbdo.intData();
      digitalWrite(BULB2_PIN, bulb2Val ? HIGH : LOW);
      Serial.print("Bulb2: ");
      Serial.println(bulb2Val);
    } else {
      Serial.print("Bulb2 error: ");
      Serial.println(fbdo.errorReason());
    }

    // -------- Alarm --------
    if (Firebase.RTDB.getInt(&fbdo, "/alarmState")) {
      int alarmVal = fbdo.intData();
      digitalWrite(ALARM_PIN, alarmVal ? HIGH : LOW);
      Serial.print("Alarm: ");
      Serial.println(alarmVal);
    } else {
      Serial.print("Alarm error: ");
      Serial.println(fbdo.errorReason());
    }

  }

  delay(1000);
}
